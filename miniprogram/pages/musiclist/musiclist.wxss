.detail-container {
    height: 320rpx;
    filter: blur(40rpx);
    opacity: .4;
}

.detail-mask {
    position: absolute;
    width: 100%;
    height: 320rpx;
    background-color: #333;
    top: 0;
    left: 0;
    z-index: -1;
}

.detail-img {
    width: 280rpx;
    height: 280rpx;
    border-radius: 6rpx;
}

.detail-info {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 320rpx;
    padding: 20rpx;
    box-sizing: border-box;
    align-items: center;
}

.detail {
    flex-grow: 1;
    line-height: 60rpx;
    width: 0;
    height: 280rpx;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.detail view {
    color: #fff;
    font-size: 24rpx;
}

.detail .detail-nm {
    font-size: 36rpx;
    font-weight: 400;
    line-height: 1.3;
}

.detail .creator {
    display: flex;
    align-items: center;
}

.detail .avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.detail .nickname {
    color: #eee;
    font-size: 28rpx;
}

.detail .desc {
    line-height: 1.3;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #eee;
}