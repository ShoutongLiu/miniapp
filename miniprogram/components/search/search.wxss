@import '../../style/icon.wxss';

.container {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    position: relative;
}

.search-input {
    flex: 1;
    height: 68rpx;
    font-size: 28rpx;
    border-radius: 50rpx;
    background-color: #f5f5f5;
    padding-left: 60rpx;
}

.search-btn {
    background-color: #d43c33;
    color: #fff;
    margin-left: 20rpx;
    font-size: 24rpx;
}

.s-bar {
    color: #999;
}

.icon-sousuo-copy {
    position: absolute;
    font-size: 50rpx;
    color: #9f9f9f;
    top: 50%;
    transform: translate(16rpx, -50%);
}