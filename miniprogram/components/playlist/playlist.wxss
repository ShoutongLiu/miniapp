@import '../../style/icon.wxss';

.list-container {
    width: 220rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.list-img {
    width: 100%;
    height: 220rpx;
    border-radius: 8rpx;
}

.count-view {
    display: flex;
    align-items: center;
    position: absolute;
    top: 4rpx;
    right: 10rpx;
    color: #fff;
    font-size: 24rpx;
    text-shadow: 1px 0 0 rgba(0, 0, 0, .5);
}

.icon-play1 {
    font-size: 26rpx;
}

.play-name {
    font-size: 26rpx;
    line-height: 1.2;
    padding: 0 4rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}