<view class="container">
    <text class="time">{{showTime.currentTime}}</text>
    <view class="control">
        <movable-area class="movable-area">
            <movable-view class="movable-view" direction="horizontal" damping="1000" x="{{movableDis}}" bindchange="handleChange" bindtouchend="onTouchEnd"></movable-view>
        </movable-area>
        <progress class="" stroke-width="4" activeColor="#fff" backgroundColor="#969696" percent="{{progress}}"></progress>
    </view>
    <text class="time">{{showTime.totalTime}}</text>
</view>