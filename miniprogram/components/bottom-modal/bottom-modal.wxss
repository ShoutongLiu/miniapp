@import '../../style/icon.wxss';

.modal {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 99;
    text-align: center;
    background: rgba(0, 0, 0, .6);
}

.panel {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 300rpx;
    background-color: #f8f8f8;
}

.modal .icon-cuo {
    position: absolute;
    font-size: 40rpx;
    right: 5rpx;
    top: 5rpx;
    padding: 20rpx;
}